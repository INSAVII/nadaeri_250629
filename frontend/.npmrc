# 한국 npm 미러 서버 사용 (더 빠른 다운로드)
registry=https://registry.npmjs.org/

# 캐시 최적화
cache=C:\Users\PC\AppData\Local\npm-cache
prefer-offline=true

# 성능 최적화
maxsockets=50
fetch-retries=3
fetch-retry-mintimeout=10000
fetch-retry-maxtimeout=60000

# 보안 및 감사 비활성화 (개발 환경에서만)
audit=false
fund=false

# 로그 레벨 조정
loglevel=warn

# 병렬 설치 활성화
progress=false 