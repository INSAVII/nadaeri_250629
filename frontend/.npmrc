# npm 설정 최적화
registry=https://registry.npmjs.org/
prefer-offline=true
fund=false
audit=false
loglevel=error
progress=false

# 성능 최적화
maxsockets=50
fetch-retries=3
fetch-retry-mintimeout=10000
fetch-retry-maxtimeout=60000

# 보안 및 감사 비활성화 (개발 환경에서만)
audit=false
fund=false

# 로그 레벨 조정
loglevel=warn

# 병렬 설치 활성화
progress=false 